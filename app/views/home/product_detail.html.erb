<% begin %>
<% product = Product.find(params[:id]) %>
<section class="baner area-between">
  <div class="content text-center">
    <h1 class="title" style="text-transform: uppercase;-webkit-text-stroke: 5px #f26d26;font-size: 100px;"><%= product.name %></h1>
  </div>
</section>
<!-- end section baner -->
<!-- start inner page-->
<div class="container">
  <div class="row justify-content-md-center mt-3">
    <!-- start picture product -->
    <div class="col-lg-6">
      <div class="col-md-12">
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
          <div class="carousel-inner">
            <% product.photos.each do |img| %>
              <div class="carousel-item <%= img == product.photos.first ? 'active' : ''%> img-magnifier-container">
                <%= image_tag img.photo_url, class: 'd-block mx-auto', style: "width: 600px; height: 600px; object-fit: cover;" %>
              </div>
            <% end %>
          </div>
          <a class="carousel-control-prev" href="#carouselExampleControls" role="button"
                                data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleControls" role="button"
                                data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      </div>
      <div class="col-md-12">
        <div class="row">
          <% product.photos.each do |img| %>
            <div class="col">
              <%= image_tag img.photo_url, class: 'img-fluid' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-lg-6 product-text">
      <div class="row">
        <div class="col-md-6 col-6">
          <div class="col-md-12">
            <p class="font-size-20px font-weight-700"><%= product.name %></p>
            <i class="fa fa-star check"></i>
            <i class="fa fa-star check"></i>
            <i class="fa fa-star check"></i>
            <i class="fa fa-star check"></i>
            <i class="fa fa-star check"></i>
          </div>
        </div>
        <div class="col-md-6 col-6 text-right">
          <div class="col align-self-end">
            <div class="price-css" style="text-decoration: line-through;"><span><%= number_with_delimiter(product.price) %> vnd</span></div>
            <span class="dis-price"><%= number_with_delimiter(discount(product))%> vnd</span>
          </div>
        </div>
      </div>
      <div class="clearfix"></div>
      <div class="col-md-12">
        <div class="mt-3">
          <p>
            <%= product.short_des %>
          </p>
        </div>
        <div class="mt-3 text-2">
          <p class="mb-0">
            <span>Hiện trạng</span>
            <% if product.quantity.to_i > 0 %>
              : Còn trong kho.
              <%= image_tag 'available.png' %>
            <% else%>
              <p style="color: red">Tạm thời hết hàng</p>
            <% end %>
          </p>
          <p class="mb-0">
            <span>Đặc sản thuộc</span>
            : <%= City.find(product.city_id).name %>
          </p>
        </div>
        <div class="quatity">
          <div class="row w-100">
            <div class="col-md-6 col-sm-6 col-6">
              <h4>Số lượng :</h4>
              <div class="add-to-cart">
                <button class="btn btn-default btn-outline-secondary btn-number" onclick="decrement(<%= product.id %>)">
                  <i class="fa fa-minus"></i>
                </button>
                <input id='demoInput<%= product.id %>' type='number' min='1' max='100' value='1' style= 'border: 1px solid #d9d9d9; text-align: center; height: 40px !important'>
                <button class="btn btn-default btn-outline-secondary btn-number" onclick="increment(<%= product.id %>)">
                  <i class="fa fa-plus"></i>
                </button>
              </div>
            </div>
            <div class="col-md-6 col-sm-6 col-6 align-self-center text-center">
              <button class="btn btn-add2cart" onclick="addToCart(<%= product.id %>)" data-bs-toggle="modal" data-bs-target="#addToCartModal">Thêm vào giỏ hàng</button>
            </div>
          </div>
        </div>
        <div class="clearfix"></div>
        <div class="share">
          <h3 class="pull-left">Chia sẻ: &nbsp; &nbsp;</h3>
          <div class="pull-left">
            <ul class="social-network3">
              <li>
                <a href="#" class="facebook-icon">
                  <i class="fa fa-facebook"></i>
                </a>
              </li>
              <li>
                <a href="#" class="twitter-icon">
                  <i class="fa fa-twitter"></i>
                </a>
              </li>
              <li>
                <a href="#" class="google-icon">
                  <i class="fa fa-google-plus"></i>
                </a>
              </li>
              <li>
                <a href="#" class="linkedin-icon">
                  <i class="fa fa-linkedin"></i>
                </a>
              </li>
            </ul>
          </div>
        </div>
        <div class="clearfix"></div>
        <div class="row category">
          <div class="row list-3">
            <div class="col-lg-4">
              <%= image_tag 'shield.png' %>
              &nbsp; Đổi trả trong 10 ngày.
            </div>
            <div class="col-lg-4">
              <%= image_tag 'shipping.png' %>
              &nbsp; Giao hàng nhanh.
            </div>
            <div class="col-lg-4">
              <%= image_tag 'transfer.png' %>
              &nbsp; Hoàn tiền 35%
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- end picture product -->
    <div class="clearfix"></div>
    <!-- start nav tabs-->
    <div class="col-md-12">
      <div id="tabs" class="description">
        <ul class="nav nav-tabs" id="myTab" role="tablist">
          <li class="nav-item" role="presentation">
            <button class="nav-link active" id="description-tab" data-bs-toggle="tab"
                                    data-bs-target="#description" type="button" role="tab" aria-controls="description"
                                    aria-selected="true">Mô tả</button>
          </li>
          <li class="nav-item" role="presentation">
            <button class="nav-link" id="review-tab" data-bs-toggle="tab" data-bs-target="#review"
                                    type="button" role="tab" aria-controls="review"
                                    aria-selected="false">Nhận xét</button>
          </li>
        </ul>
        <div class="tab-content" id="myTabContent">
          <div class="tab-pane fade show active" id="description" role="tabpanel"
                                aria-labelledby="description-tab">
            <p><%= product.description %></p>
          </div>
          <div class="tab-pane fade" id="review" role="tabpanel" aria-labelledby="review-tab">
            <div class="row">
              <div class="col-md-6">
                <div class="row m-0 text-center-m">
                  <div class="col-lg-2 col-md-3 col-sm2 text-center mb-3">
                    <%= image_tag 'avatar1.png', class:"radius image-boder img-fluid" %>
                  </div>
                  <div class="col-lg-10 col-md-9 col-sm-10">
                    <h2 class="font-15 mt-10">
                      Daryl Michaels
                      <span class="font-13 text-themecolor">
                        Sản phẩm: Muối Tây Ninh
                      </span>
                    </h2>
                    <span class="fa fa-star check-font-13"></span>
                    <span class="fa fa-star check-font-13"></span>
                    <span class="fa fa-star check-font-13"></span>
                    <span class="fa fa-star check-font-13"></span>
                    <span class="fa fa-star check-font-13"></span>
                    &nbsp;
                    <span class="red"> 1 phút trước</span>
                    <div class="mt-1">
                      <p>
                        Cras sit amet nibh libero, in gravida nulla. Nulla vel metus
                        scelerisque ante sollicitudin.
                      </p>
                    </div>
                  </div>
                  <div class="clearfix"></div>
                  <div class="col-12">
                    <hr>
                  </div>
                  <div class="clearfix"></div>
                  <div class="col-lg-2 col-md-3 col-sm2 text-center mb-3">
                    <%= image_tag 'avatar2.jpg', class:"radius image-boder img-fluid" %>
                  </div>
                  <div class="col-lg-10 col-md-9 col-sm-10">
                    <h2 class="font-15 mt-10">
                      Daryl Michaels
                      <span class="font-13 text-themecolor">
                        Sản phẩm: Muối Tây Ninh
                      </span>
                    </h2>
                    <span class="fa fa-star check-font-13"></span>
                    <span class="fa fa-star check-font-13"></span>
                    <span class="fa fa-star check-font-13"></span>
                    <span class="fa fa-star check-font-13"></span>
                    <span class="fa fa-star check-font-13"></span>
                    &nbsp;
                    <span class="red"> 1 phút trước</span>
                    <div class="mt-1">
                      <p>
                        Cras sit amet nibh libero, in gravida nulla. Nulla vel metus
                        scelerisque ante sollicitudin.
                      </p>
                    </div>
                  </div>
                </div>
              </div>
              <div class="col-md-6">
                <h4>
                  Viết nhận xét của bạn.
                </h4>
                <p class="mb-3">Địa chỉ email của bạn sẽ không được công khai.</p>
                <form class="review-form">
                  <div class="mb-3">
                    <input type="text" class="form-control" id="name-reviewer"
                                                    placeholder="Your Name">
                  </div>
                  <div class="mb-3">
                    <input type="email" class="form-control" id="email-reviewer"
                                                    placeholder="Email Address">
                  </div>
                  <div class="mb-3">
                    <textarea class="form-control" id="exampleFormControlTextarea1"
                                                    placeholder="Your Review" rows="5"></textarea>
                  </div>
                  <div class="mb-3">
                    <div class="input-rating">
                      <strong>Đánh giá của bạn:</strong>
                      <div class="stars">
                        <label class="rate">
                          <input type="radio" name="radio1" id="star1" value="star1">
                          <i class="far fa-star star one-star"></i>
                        </label>
                        <label class="rate">
                          <input type="radio" name="radio1" id="star2" value="star2">
                          <i class="far fa-star star two-star"></i>
                        </label>
                        <label class="rate">
                          <input type="radio" name="radio1" id="star3" value="star3">
                          <i class="far fa-star star three-star"></i>
                        </label>
                        <label class="rate">
                          <input type="radio" name="radio1" id="star4" value="star4">
                          <i class="far fa-star star four-star"></i>
                        </label>
                        <label class="rate">
                          <input type="radio" name="radio1" id="star5" value="star5">
                          <i class="far fa-star star five-star"></i>
                        </label>
                      </div>
                      <button class="btn btn-add2cart">Submit</button>
                    </div>
                  </div>
                </form>
              </div>
              <div class="clearfix"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- end nav tabs-->
    <div class="clearfix"></div>
    <!-- start relate product -->
    <div class="related">
      <div class="col-md-12 mb-50px">
        <h2><%= t('.related_products') %></h2>
        <div id="carouselPrdControls" class="carousel slide" data-bs-ride="carousel">
          <div class="carousel-inner">
            <% city     = City.all.find(product.city_id) %>
            <% region   = Region.all.find(city.region_id) %>
            <% cities   = City.all.where(region_id: region) %>
            <% related  = Product.all.where(city_id: cities) %>
            <% related.each do |rl| %>
                <div class="carousel-item <%= rl == related.first ? 'active' : '' %>">
                  <%= link_to "/product_detail/#{rl.id}" do %>
                    <%= image_tag rl.photos.first.photo_url, class: 'carousel-cell', style: 'margin: 0 auto;' %>
                  <% end %>
                </div>
            <% end %>
          </div>
          <button class="carousel-control-prev" type="button" data-bs-target="#carouselPrdControls" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" style="background-color: orange" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#carouselPrdControls" data-bs-slide="next">
            <span class="carousel-control-next-icon" style="background-color: orange" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
        </div>
      </div>
    </div>
    <!-- end relate product -->
  </div>
</div>
<!-- end inner page-->
<!-- Modal -->
<div class="modal fade" id="addToCartModal" tabindex="-1" aria-labelledby="addToCartModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="addToCartModalLabel">Thông báo</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        Thêm vào giỏ hàng thành công
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
<script>
  function increment(id) {
     document.getElementById('demoInput' + id).stepUp();
  }
  function decrement(id) {
     document.getElementById('demoInput' + id).stepDown();
  }
  function addToCart(id) {
    var quantity = $('#demoInput' + id).val()
    $.ajax({
      type: "POST",
      url: '/shopping',
      data: {
        item_id:  id,
        quantity: quantity
      },
      dataType: 'script'
    });
  }
</script>
<% rescue %>
  <section class="container">
    <h2 style="height: 500px">Sản phẩm không tồn tại!</h2>
  </section>
<% end %>
