<div class="d-flex" id="admin-wrapper">
  <!-- Sidebar-->
  <div class="bg-base" id="sidebar-wrapper">
    <div class="list-group list-group-flush d-flex flex-column custom-side" style='height: 100% !important'>
      <div class="d-flex">
        <a class="list-group-item list-group-item-action px-29px py-12px <%= bg_active_color("admins")%>"  href="/admin/admins">Admins</a>
      </div>

      <div class="d-flex">
        <a class="list-group-item list-group-item-action px-29px py-12px <%= bg_active_color("customers")%>" href="/admin/customers">Users</a>
      </div>

      <div class="d-flex">
        <a class="list-group-item list-group-item-action <%= bg_active_color("products")%> px-29px py-12px" href="/admin/products">Products</a>
      </div>

      <div class="d-flex d-none">
        <a class="list-group-item list-group-item-action px-29px py-12px <%= bg_active_color("orders")%>" href="/admin/orders">Orders</a>
      </div>

      <div class="mt-auto">
        <%= link_to 'Logout', destroy_administrator_session_path, method: :DELETE, class: 'list-group-item list-group-item-action bg-base px-29px pt-10px' %>
      </div>
    </div>
  </div>
  <!-- Page content wrapper-->
  <div id="page-content-wrapper">
    <!-- Top navigation-->
    <nav class="navbar-cms navbar-expand-lg">
      <div class="container-fluid">
        <span class="email-current"><%=current_administrator.email%></span>
      </div>
    </nav>
    <!-- Page content-->
    <div class="container-fluid p-20px">
      <%= render 'admins/shared/messages' %>
      <%= yield %>
    </div>
  </div>
</div>
<script type="text/javascript">
  $('.region').click(function(){
    $(this).find('.icon-toggle').toggleClass('d-none')
  })
</script>