<title>Login</title>
<div class="user-sign-up">
  <div class="container">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "card p-5 m-5 mx-auto bg-light"}) do |f| %>
      <div class="title text-center">
        <h1>LOGIN</h1>
      </div>
      <div class="form-group">
        <%= f.input :email, autofocus: true, autocomplete: "email", placeholder: "Email".html_safe, class: "form-control" ,style:"height: 50px;"%>
      </div>

      <div class="form-group">
        <%= f.input :password, autocomplete: "current-password", placeholder: "Password", class: "form-control", style:"height: 50px;" %>
      </div>
      <%if flash %>
        <% flash.each do |key, value| %>
          <%if key == "notice"%>
            <div id="error_explanation" style="color: green;">
          <%else%>
            <div id="error_explanation" style="color: red;">
          <%end%>
            <%if key !="ok" %>
              <div class="alert alert-<%=key%>">
                <b><%= value unless value.blank? %></b>
              </div>
            <%end%>
          </div>
        <% end %>
      <%end %>

      <button type="submit" class="btn btn-warning mt-2" style="height: 50px;font-size: 18px;" >Login<% f.button :submit %></button>
      <div style="text-align:center" class="mt-4">
        <%= render "customers/shared/links" %>
      <div>
    <% end %>
  </div>
</div>
